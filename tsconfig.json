{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "@types/**/*.d.ts"
    ]
  },
  "include": [
    "@types/**/*",
    "src/main/index.ts",
    "src/renderer/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.sass"
  ]
}
